.counter {
  display:flex;
} 
.rank {
    margin: 20rpx 20rpx 20rpx;
    width: 120rpx;
    height: 60rpx;
    border-radius: 10rpx;
    background-color: gold;
    font-size: 40rpx;
}
.l-item {
    flex: 3;
    padding: 20rpx 20rpx 0;
    position: relative;
}
.r-item {
    flex: 5;
    margin: 30rpx 20rpx 20rpx; 
}
.l-item-img {
    width: 100%;
    border-radius: 20rpx;
    box-shadow:0 0 5rpx 5rpx;
}
.collect {
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  top: 20rpx;
  left: 20rpx;
}
.title {
    font-size: 40rpx;
    line-height: 60rpx;
    font-weight: 600;
    color: black
}
.star-word {
    color: black;
    font-size: 30rpx;
    line-height: 40rpx;
    font-weight: 400;

}
.minute {
    color: goldenrod;
    font-size: 30rpx;
    line-height: 40rpx;
}
.time {
    font-size: 30rpx;
    line-height: 40rpx;
}
.plot-name {
    background-color:aliceblue;
    font-size: 30rpx;
    line-height: 40rpx;
    display: flex;   
}